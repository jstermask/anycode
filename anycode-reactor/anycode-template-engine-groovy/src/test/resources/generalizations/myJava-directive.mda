import in.labulle.anycode.engine.groovy.directive.AnycodeDirective
import in.labulle.anycode.uml.*;

class MyJavaDirective extends AnycodeDirective {
	def signature(IClass c) {
		return "public class ${c.name}" + extension(c)
	}

	def extension(IClass c) {
		def parent = c.getGeneralizations().isEmpty() ? null : c.getGeneralizations().get(0);
		if(parent != null) {
			return " extends ${parent.name}"
		}
		return ""
	}
}



